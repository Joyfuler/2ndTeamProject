<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-config.dtd">
	<configuration>
		<settings>
			<setting name="jdbcTypeForNull" value="NULL"/> <!-- date에 널 허용 -->
		</settings>
		<typeAliases>
			<typeAlias type="com.project.adventure.vo.Member" alias="Member"/>
			<typeAlias type="com.project.adventure.vo.Banner" alias="Banner"/>
			<typeAlias type="com.project.adventure.vo.Cart" alias="Cart"/>
			<!-- 이하 dto 추가한 패키지를 alias 넣어서 추가 -->			
		</typeAliases>
		<mappers>
			<mapper resource="META-INF/sqlmap/mappers/Member.xml"/>
			<mapper resource="META-INF/sqlmap/mappers/Banner.xml"/>
			<mapper resource="META-INF/sqlmap/mappers/Cart.xml"/>
			<!-- 이하 맡은 쿼리가 든 xml 경로를 추가 -->			
		</mappers>
	</configuration>